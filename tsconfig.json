{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": ".code",
    "newLine": "LF",
    "sourceRoot": "src",
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "importHelpers": true,
    "allowJs": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "test",
    "node_modules",
    "dist",
    "es",
    "lib"
  ]
}
